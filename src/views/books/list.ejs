<div class="container">
    <div class="page-header fade-in">
        <div>
            <h1 class="page-title">
                <i class="fas fa-book"></i> <%= __('bookList.title') %>
            </h1>
        </div>
        <a href="/books/add" class="btn btn-primary">
            <i class="fas fa-plus"></i> <%= __('bookList.addNew') %>
        </a>
    </div>

    <% if (books.length === 0) { %>
        <div class="empty-state fade-in-d1">
            <div class="empty-state-icon">
                <i class="fas fa-book-open"></i>
            </div>
            <h3><%= __('bookList.empty') %></h3>
            <p><%= __('bookList.emptyDesc') %></p>
            <a href="/books/add" class="btn btn-primary btn-lg">
                <i class="fas fa-plus"></i> <%= __('bookList.addFirst') %>
            </a>
        </div>
    <% } else { %>
        <div class="grid grid-3">
            <% books.forEach((book, index) => { %>
                <div class="book-card fade-in-d<%= Math.min(index % 3 + 1, 3) %>">
                    <a href="/books/<%= book.id %>" class="book-cover-wrap">
                        <% if (book.cover_image) { %>
                            <img src="<%= book.cover_image %>" alt="<%= book.title %>" class="book-cover">
                        <% } else { %>
                            <div class="book-cover" style="display: flex; align-items: center; justify-content: center; color: white; font-size: 3rem;">
                                <i class="fas fa-book"></i>
                            </div>
                        <% } %>
                    </a>

                    <div class="book-body">
                        <a href="/books/<%= book.id %>">
                            <h3 class="book-title"><%= book.title %></h3>
                        </a>
                        <p class="book-author">
                            <i class="fas fa-user"></i> <%= book.author %>
                        </p>

                        <div class="book-meta">
                            <% if (book.status === 'reading') { %>
                                <span class="badge badge-primary">
                                    <i class="fas fa-book-reader"></i> <%= __('bookStatus.reading') %>
                                </span>
                            <% } else if (book.status === 'completed') { %>
                                <span class="badge badge-success">
                                    <i class="fas fa-check"></i> <%= __('bookStatus.completed') %>
                                </span>
                            <% } else { %>
                                <span class="badge badge-warning">
                                    <i class="fas fa-bookmark"></i> <%= __('bookStatus.wantToRead') %>
                                </span>
                            <% } %>

                            <% if (book.rating) { %>
                                <div class="rating">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <span class="rating-star <%= i <= book.rating ? '' : 'empty' %>">&#9733;</span>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>

                        <div style="display: flex; gap: 8px; margin-top: 16px;">
                            <a href="/books/<%= book.id %>" class="btn btn-sm btn-primary" style="flex: 1;">
                                <i class="fas fa-eye"></i> <%= __('bookList.view') %>
                            </a>
                            <a href="/books/edit/<%= book.id %>" class="btn btn-sm btn-secondary">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>
